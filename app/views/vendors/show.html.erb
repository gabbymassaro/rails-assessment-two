<h1><%= @vendor.name %></h1>

<h2>Sweets Sold:</h2>
<ul>
  <% @vendor.vendor_sweets.each do |vs|  %>
    <li><strong><%= vs.sweet.name %></strong>: "<%= vs.comment%>"</li>
  <% end %>
</ul>

<h2> Add Sweets and Comments </h2>

<%= form_for @vendor_sweet do |f| %>
    <%= f.hidden_field :vendor_id %>
    <%= f.label "Select Sweet"%><br>
    <%= f.collection_select :sweet_id, Sweet.all, :id, :name, include_blank: "" %><br><br>
    <%= f.label "New Comment" %><br>
    <%= f.text_field :comment%><br><br>
    <%= f.submit %>
<% end %>
